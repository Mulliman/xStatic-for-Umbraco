<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ContentTargetFolders>.</ContentTargetFolders>
    <Product>xStatic.Core</Product>
    <PackageId>xStatic.Core</PackageId>
    <Title>xStatic.Core</Title>
    <Version>12.0.0-beta</Version>
    <Description>xStatic core libraries used for creating custom components to use with xStatic for Umbraco 9+.</Description>
    <PackageTags>umbraco umbraco12 xstatic static site generation</PackageTags>
    <Authors>Sam Mullins</Authors>
    <Copyright>Sam Mullins</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://www.sammullins.co.uk/software/xstatic-for-umbraco/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Mulliman/xStatic-for-Umbraco</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageIcon>Logo.png</PackageIcon>
    <PackageIconUrl />
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Generator\Headless\HeadlessApiRequestRespository.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="7.0.0" />
    <PackageReference Include="Umbraco.Cms.Core" Version="12.0.0" />
    <PackageReference Include="Umbraco.Cms.Infrastructure" Version="12.0.0" />
    <PackageReference Include="Umbraco.Cms.Web.Common" Version="12.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\Brand\Logo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="Generator\Headless\HeadlessApiRequestRespository.cs" />
  </ItemGroup>

</Project>
